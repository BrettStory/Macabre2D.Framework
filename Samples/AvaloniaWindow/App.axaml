<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Macabresoft.Macabre2D.Samples.AvaloniaWindow.App">
    <Application.Styles>
        <FluentTheme Mode="Dark"/>
    </Application.Styles>

    <Application.Resources>
        <SolidColorBrush x:Key="BlackBrush">#FF1E0F0F</SolidColorBrush>
        <SolidColorBrush x:Key="WhiteBrush">#FFE3DAC9</SolidColorBrush>
        <SolidColorBrush x:Key="GreyBrush">#FF292528</SolidColorBrush>
    </Application.Resources>
</Application>