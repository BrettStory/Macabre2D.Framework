<local:BaseNumericEditor xmlns="https://github.com/avaloniaui"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:local="clr-namespace:Macabresoft.Macabre2D.UI.SceneEditor.Controls.ValueEditors"
                          xmlns:system="clr-namespace:System;assembly=mscorlib"
                          x:TypeArguments="system:Boolean"
                          x:Class="Macabresoft.Macabre2D.UI.SceneEditor.Controls.ValueEditors.BoolEditor">
    <CheckBox Content="{Binding $parent[local:BoolEditor].Title}"
              IsChecked="{Binding $parent[local:BoolEditor].Value}" />
</local:BaseNumericEditor>