<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Macabresoft.Macabre2D.UI.SceneEditor.Controls"
             xmlns:scene="clr-namespace:Macabresoft.Macabre2D.UI.Common.ViewModels.Scene;assembly=Macabre2D.UI.Common"
             x:Class="Macabresoft.Macabre2D.UI.SceneEditor.Views.Scene.EntityEditorView">
    <Design.DataContext>
        <scene:EntityEditorViewModel />
    </Design.DataContext>
    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollBarVisibility="Visible">
        <ItemsControl Items="{Binding SelectionService.Editors}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <controls:GroupBox Header="{Binding Name}">
                        <ItemsControl Items="{Binding ValueEditors}" />
                    </controls:GroupBox>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>